#!/bin/bash

# Comparatron - Easy Launch Script
# Provides a simple 'comparatron' command to run the application from anywhere

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Find Comparatron installation directory
COMPARATRON_DIR=""

# Try common locations for Comparatron installation
for dir in "$HOME/Documents/comparatron-optimised" "$HOME/comparatron-optimised" "/opt/comparatron-optimised" "/usr/local/comparatron-optimised"; do
    if [ -d "$dir" ] && [ -f "$dir/main.py" ]; then
        COMPARATRON_DIR="$dir"
        break
    fi
done

if [ -z "$COMPARATRON_DIR" ]; then
    echo -e "${RED}Error: Could not find Comparatron installation directory.${NC}"
    echo -e "${YELLOW}Expected locations:${NC}"
    echo -e "${YELLOW}  - ~/Documents/comparatron-optimised${NC}"
    echo -e "${YELLOW}  - ~/comparatron-optimised${NC}"
    echo -e "${YELLOW}  - /opt/comparatron-optimised${NC}"
    echo -e "${YELLOW}  - /usr/local/comparatron-optimised${NC}"
    exit 1
fi

# Check if service is already running
if curl -s http://127.0.0.1:5001 &>/dev/null; then
    echo -e "${YELLOW}Comparatron is already running on port 5001.${NC}"
    echo -e "${YELLOW}Visit: http://localhost:5001${NC}"
    
    if [ "$1" = "force" ] || [ "$1" = "--force" ]; then
        echo -e "${YELLOW}Force argument detected, launching anyway...${NC}"
    else
        echo -e "${YELLOW}To launch another instance anyway, use: comparatron force${NC}"
        exit 0
    fi
fi

# Change to Comparatron directory and run the application
echo -e "${GREEN}Launching Comparatron from: $COMPARATRON_DIR${NC}"
echo -e "${GREEN}Access the interface at: http://localhost:5001${NC}"

cd "$COMPARATRON_DIR" && python3 main.py